<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group_2.ui.MainScreenController"
            styleClass="dashboard-root"
            stylesheets="@/styles.css"
            prefWidth="1000" prefHeight="700">

    <!-- Top Header -->
    <top>
        <HBox styleClass="main-header" spacing="20" alignment="CENTER_LEFT" 
              style="-fx-background-color: linear-gradient(to right, #1e293b, #334155); -fx-padding: 20 30;">
            <Text text="ðŸ  WG Manager" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- User Info -->
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Text fx:id="headerUserName" text="User Name" 
                          style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text fx:id="headerWgName" text="WG Name" 
                          style="-fx-font-size: 12px; -fx-fill: #94a3b8;"/>
                </VBox>
                <StackPane styleClass="avatar">
                    <Text fx:id="headerAvatar" text="?" styleClass="avatar-text"/>
                </StackPane>
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-background-color: #f8fafc; -fx-padding: 50;">
            
            <!-- Welcome Section -->
            <VBox alignment="CENTER" spacing="10">
                <Text fx:id="welcomeText" text="Welcome back!" 
                      style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                <Text fx:id="subtitleText" text="What would you like to do today?" 
                      style="-fx-font-size: 16px; -fx-fill: #64748b;"/>
            </VBox>

            <!-- Main Action Cards -->
            <VBox spacing="25" alignment="CENTER">
                
                <!-- Dashboard Card - Top Featured -->
                <VBox styleClass="card" spacing="20" alignment="CENTER" 
                      style="-fx-pref-width: 500; -fx-pref-height: 180; -fx-cursor: hand;"
                      onMouseClicked="#navigateToDashboard">
                    <HBox spacing="25" alignment="CENTER">
                        <StackPane style="-fx-background-color: linear-gradient(to bottom right, #6366f1, #8b5cf6); -fx-background-radius: 20; -fx-pref-width: 80; -fx-pref-height: 80;">
                            <Text text="ðŸ˜ï¸" style="-fx-font-size: 36px;"/>
                        </StackPane>
                        <VBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="WG Dashboard" styleClass="card-title"/>
                            <Text text="View your WG details, members, rooms, and manage your shared living space."
                                  styleClass="card-subtitle" wrappingWidth="300"/>
                            <Button text="Open Dashboard â†’" onAction="#navigateToDashboard" 
                                    styleClass="primary-button" style="-fx-pref-width: 180;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Secondary Action Cards Row -->
                <HBox spacing="25" alignment="CENTER">
                    
                    <!-- Cleaning Schedule Card -->
                    <VBox styleClass="card" spacing="15" alignment="CENTER" 
                          style="-fx-pref-width: 220; -fx-pref-height: 220; -fx-cursor: hand;"
                          onMouseClicked="#navigateToCleaningSchedule">
                        <StackPane style="-fx-background-color: linear-gradient(to bottom right, #10b981, #059669); -fx-background-radius: 16; -fx-pref-width: 60; -fx-pref-height: 60;">
                            <Text text="ðŸ§¹" style="-fx-font-size: 28px;"/>
                        </StackPane>
                        <Text text="Cleaning" styleClass="card-title" style="-fx-font-size: 16px;"/>
                        <Text text="Organize cleaning duties and schedules."
                              styleClass="card-subtitle" wrappingWidth="180" style="-fx-text-alignment: center; -fx-font-size: 12px;"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button text="Open â†’" 
                                styleClass="primary-button" style="-fx-pref-width: 140; -fx-font-size: 12px;" onAction="#navigateToCleaningSchedule"/>
                    </VBox>

                    <!-- Shopping List Card -->
                    <VBox styleClass="card" spacing="15" alignment="CENTER" 
                          style="-fx-pref-width: 220; -fx-pref-height: 220; -fx-cursor: hand;"
                          onMouseClicked="#navigateToShoppingList">
                        <StackPane style="-fx-background-color: linear-gradient(to bottom right, #ec4899, #db2777); -fx-background-radius: 16; -fx-pref-width: 60; -fx-pref-height: 60;">
                            <Text text="ðŸ›’" style="-fx-font-size: 28px;"/>
                        </StackPane>
                        <Text text="Shopping List" styleClass="card-title" style="-fx-font-size: 16px;"/>
                        <Text text="Create shared shopping lists for your WG."
                              styleClass="card-subtitle" wrappingWidth="180" style="-fx-text-alignment: center; -fx-font-size: 12px;"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button text="Coming Soon" 
                                styleClass="secondary-button" style="-fx-pref-width: 140; -fx-font-size: 12px;" disable="true"/>
                    </VBox>

                    <!-- Transactions Card -->
                    <VBox styleClass="card" spacing="15" alignment="CENTER" 
                          style="-fx-pref-width: 220; -fx-pref-height: 220; -fx-cursor: hand;"
                          onMouseClicked="#navigateToExpenses">
                        <StackPane style="-fx-background-color: linear-gradient(to bottom right, #f59e0b, #d97706); -fx-background-radius: 16; -fx-pref-width: 60; -fx-pref-height: 60;">
                            <Text text="ðŸ’°" style="-fx-font-size: 28px;"/>
                        </StackPane>
                        <Text text="Transactions" styleClass="card-title" style="-fx-font-size: 16px;"/>
                        <Text text="Track and split shared costs fairly."
                              styleClass="card-subtitle" wrappingWidth="180" style="-fx-text-alignment: center; -fx-font-size: 12px;"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button text="Open" onAction="#navigateToExpenses"
                                styleClass="secondary-button" style="-fx-pref-width: 140; -fx-font-size: 12px;"/>
                    </VBox>

                </HBox>
            </VBox>

            <!-- Quick Stats -->
            <HBox spacing="20" alignment="CENTER">
                <VBox styleClass="stat-card" spacing="5" alignment="CENTER" style="-fx-pref-width: 150;">
                    <Text fx:id="memberCountText" text="0" styleClass="stat-value"/>
                    <Text text="Members" styleClass="stat-label"/>
                </VBox>
                <VBox styleClass="stat-card" spacing="5" alignment="CENTER" style="-fx-pref-width: 150;">
                    <Text fx:id="roomCountText" text="0" styleClass="stat-value"/>
                    <Text text="Rooms" styleClass="stat-label"/>
                </VBox>
                <VBox styleClass="stat-card" spacing="5" alignment="CENTER" style="-fx-pref-width: 150;">
                    <StackPane styleClass="badge">
                        <Text fx:id="inviteCodeText" text="ABCD1234" styleClass="badge-text" style="-fx-font-size: 14px;"/>
                    </StackPane>
                    <Text text="Invite Code" styleClass="stat-label"/>
                </VBox>
            </HBox>

        </VBox>
    </center>

</BorderPane>
