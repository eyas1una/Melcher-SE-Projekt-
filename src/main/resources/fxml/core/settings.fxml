<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group_2.ui.core.SettingsController"
            styleClass="dashboard-root"
            stylesheets="@/css/styles.css"
            prefWidth="1000" prefHeight="700">

    <!-- Top Header -->
    <top>
        <HBox styleClass="navbar" spacing="20" alignment="CENTER_LEFT">
            <Button text="â† Back" onAction="#backToHome" styleClass="navbar-back-button"/>
            <Text text="âš™ï¸ Home Settings" styleClass="navbar-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Text fx:id="wgNameHeader" text="Home Name" styleClass="navbar-wg-name"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #f8fafc;">
            <VBox spacing="25" style="-fx-background-color: #f8fafc; -fx-padding: 30;">

                <!-- Invitation Code Card -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="ðŸ”—" style="-fx-font-size: 24px;"/>
                        <Text text="Invitation Code" styleClass="card-title"/>
                    </HBox>
                    <Text text="Share this code with others to invite them to your home" styleClass="card-subtitle"/>
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <StackPane style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-padding: 15 25;">
                            <Text fx:id="inviteCodeText" text="ABCD1234" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #6366f1; -fx-font-family: monospace;"/>
                        </StackPane>
                        <Button text="ðŸ“‹ Copy" onAction="#copyInviteCode"
                                style="-fx-background-color: #e0e7ff; -fx-text-fill: #4338ca; -fx-background-radius: 8; -fx-padding: 12 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

                <!-- Admin Info Card (only visible to admin) -->
                <VBox fx:id="adminCard" styleClass="card" spacing="15" style="-fx-padding: 25;" visible="false" managed="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Text text="ðŸ‘‘" style="-fx-font-size: 24px;"/>
                        <Text text="Admin Controls" styleClass="card-title"/>
                    </HBox>
                    <Text text="You are the admin of this home" styleClass="card-subtitle"/>
                    <HBox spacing="15">
                        <Button text="Edit Home Name" onAction="#editWgName"
                                style="-fx-background-color: #dbeafe; -fx-text-fill: #1d4ed8; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
                        <Button text="ðŸ—‘ï¸ Delete Home" onAction="#deleteWG"
                                style="-fx-background-color: #fef2f2; -fx-text-fill: #dc2626; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

                <!-- Rooms Section -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="ðŸšª" style="-fx-font-size: 24px;"/>
                            <Text text="Rooms" styleClass="card-title"/>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addRoomButton" text="+ Add Room" onAction="#addRoom"
                                styleClass="primary-button" style="-fx-padding: 8 16;"/>
                    </HBox>
                    <Text fx:id="roomCountText" text="0 rooms in your home" styleClass="card-subtitle"/>
                    <VBox fx:id="roomsBox" spacing="10">
                        <!-- Rooms will be added here dynamically -->
                    </VBox>
                </VBox>

                <!-- Members Section -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Text text="ðŸ‘¥" style="-fx-font-size: 24px;"/>
                            <Text text="Members" styleClass="card-title"/>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ“‹ Copy Invite Code" onAction="#copyInviteCode"
                                style="-fx-background-color: #e0e7ff; -fx-text-fill: #4338ca; -fx-background-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;"/>
                    </HBox>
                    <Text fx:id="memberCountText" text="0 members in your home" styleClass="card-subtitle"/>
                    <VBox fx:id="membersBox" spacing="10">
                        <!-- Members will be added here dynamically -->
                    </VBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
