<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.group_2.ui.TransactionHistoryController"
           styleClass="dashboard-root"
           stylesheets="@/styles.css"
           prefWidth="1000" prefHeight="700">

    <BorderPane>
        <!-- Top Header -->
        <top>
            <HBox styleClass="navbar" spacing="20" alignment="CENTER_LEFT">
                <Button text="â† Back" onAction="#returnToTransactions" styleClass="navbar-back-button"/>
                <Text text="ðŸ“œ Transaction History" styleClass="navbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </top>

        <!-- Main Content -->
        <center>
            <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                <VBox styleClass="main-content" spacing="30" style="-fx-padding: 30;">
                    
                    <!-- Page Header -->
                    <VBox styleClass="content-header" spacing="8">
                        <Text text="Transaction History" styleClass="page-title"/>
                        <Text text="View all your past transactions with your flatmates" styleClass="page-subtitle"/>
                    </VBox>

                    <!-- Info Card -->
                    <VBox styleClass="card" spacing="15" style="-fx-background-color: linear-gradient(to bottom right, #3b82f6, #2563eb); -fx-padding: 25;">
                        <Text text="Transaction Overview" style="-fx-font-size: 14px; -fx-fill: rgba(255,255,255,0.9); -fx-font-weight: 500;"/>
                        <Text fx:id="transactionCountText" text="Loading..." 
                              style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-fill: white;"/>
                        <Text text="Transactions matching your filters" style="-fx-font-size: 12px; -fx-fill: rgba(255,255,255,0.7);"/>
                    </VBox>

                    <!-- Filter Bar -->
                    <VBox styleClass="card" spacing="15">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Text text="ðŸ“… Filter by:" styleClass="card-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button fx:id="clearFiltersButton" text="â†º Clear Filters" styleClass="secondary-button" onAction="#clearFilters"/>
                        </HBox>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <VBox spacing="5">
                                <Text text="Year" style="-fx-font-size: 11px; -fx-fill: #6b7280;"/>
                                <ComboBox fx:id="yearFilter" promptText="Year" prefWidth="100"/>
                            </VBox>
                            <VBox spacing="5">
                                <Text text="Month" style="-fx-font-size: 11px; -fx-fill: #6b7280;"/>
                                <ComboBox fx:id="monthFilter" promptText="Month" prefWidth="120"/>
                            </VBox>
                            <VBox spacing="5">
                                <Text text="Payer" style="-fx-font-size: 11px; -fx-fill: #6b7280;"/>
                                <ComboBox fx:id="payerFilter" promptText="All Payers" prefWidth="130"/>
                            </VBox>
                            <VBox spacing="5">
                                <Text text="Debtor" style="-fx-font-size: 11px; -fx-fill: #6b7280;"/>
                                <ComboBox fx:id="debtorFilter" promptText="All Debtors" prefWidth="130"/>
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Text text="ðŸ” Search Description" style="-fx-font-size: 11px; -fx-fill: #6b7280;"/>
                                <TextField fx:id="searchField" promptText="Type to search..." styleClass="modern-text-field"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Table Container -->
                    <VBox styleClass="card" spacing="20">
                        <HBox alignment="CENTER_LEFT">
                            <Text text="ðŸ“œ Transactions" styleClass="card-title"/>
                            <Region HBox.hgrow="ALWAYS"/>
                        </HBox>
                        
                        <Text text="Filtered transaction history" styleClass="card-subtitle"/>
                        
                        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS" styleClass="table-view" fixedCellSize="50">
                            <columns>
                                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                                <TableColumn fx:id="timeColumn" text="Time" prefWidth="80"/>
                                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                                <TableColumn fx:id="creditorColumn" text="Creditor" prefWidth="120"/>
                                <TableColumn fx:id="debtorColumn" text="Debtor(s)" prefWidth="140"/>
                                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="140"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>

                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>
