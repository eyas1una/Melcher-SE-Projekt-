<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group_2.ui.CleaningScheduleController"
            styleClass="dashboard-root"
            stylesheets="@/styles.css"
            prefWidth="1200" prefHeight="800">

    <!-- Top Header -->
    <top>
        <fx:include source="navbar.fxml" fx:id="navbar"/>
    </top>

    <!-- Main Content Area - Calendar View -->
    <center>
        <VBox style="-fx-background-color: #f8fafc; -fx-padding: 25;">
            
            <!-- Header Row with Week Navigation -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
                <!-- Week Navigation -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Button text="â—€" styleClass="icon-button" onAction="#previousWeek"
                            style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8 12; -fx-cursor: hand;"/>
                    <VBox spacing="2" alignment="CENTER_LEFT">
                        <Text fx:id="weekTitle" text="Week 52, 2024" 
                              style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                        <Text fx:id="weekDateRange" text="December 23 - December 29" 
                              style="-fx-font-size: 13px; -fx-fill: #64748b;"/>
                    </VBox>
                    <Button text="â–¶" styleClass="icon-button" onAction="#nextWeek"
                            style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8 12; -fx-cursor: hand;"/>
                    <Button text="ðŸ“… Today" styleClass="secondary-button" onAction="#goToCurrentWeek"
                            style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;"/>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Progress Stats -->
                <HBox spacing="15" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="2" 
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <Text fx:id="completedTasksText" text="0/0" 
                              style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #10b981;"/>
                        <Text text="Completed" style="-fx-font-size: 11px; -fx-fill: #64748b;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="2" 
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <Text fx:id="myTasksCountText" text="0" 
                              style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #6366f1;"/>
                        <Text text="My Tasks" style="-fx-font-size: 11px; -fx-fill: #64748b;"/>
                    </VBox>
                </HBox>
            </HBox>

            <!-- Action Toolbar -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">

                <Button text="âž• Add Task" onAction="#showAddTaskDialog"
                        style="-fx-background-color: white; -fx-text-fill: #475569; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 13px; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                
                <Region style="-fx-pref-width: 20;"/>
                
                <Button text="ðŸ“ Edit Template" onAction="#openTemplateEditor"
                        style="-fx-background-color: white; -fx-text-fill: #475569; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 13px; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                <Button fx:id="loadTemplateButton" text="ðŸ“¥ Apply Template" onAction="#loadFromTemplate"
                        style="-fx-background-color: white; -fx-text-fill: #475569; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 13px; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
            </HBox>


            <!-- Calendar Grid -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                <VBox spacing="0">
                    
                    <!-- Day Headers -->
                    <HBox styleClass="calendar-header" spacing="0">
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Mon" style="-fx-font-weight: bold; -fx-fill: #64748b;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Tue" style="-fx-font-weight: bold; -fx-fill: #64748b;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Wed" style="-fx-font-weight: bold; -fx-fill: #64748b;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Thu" style="-fx-font-weight: bold; -fx-fill: #64748b;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Fri" style="-fx-font-weight: bold; -fx-fill: #64748b;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Sat" style="-fx-font-weight: bold; -fx-fill: #94a3b8;"/>
                        </StackPane>
                        <StackPane styleClass="calendar-day-header" prefWidth="130" prefHeight="40">
                            <Text text="Sun" style="-fx-font-weight: bold; -fx-fill: #94a3b8;"/>
                        </StackPane>
                    </HBox>

                    <!-- Calendar Day Cells Container -->
                    <HBox fx:id="calendarDaysContainer" spacing="0" alignment="TOP_LEFT">
                        <!-- Day cells will be added dynamically -->
                    </HBox>

                    <!-- Tasks by Room Section -->
                    <VBox spacing="15" style="-fx-padding: 25 0 0 0;">
                        <Text text="ðŸ“‹ All Cleaning Tasks" 
                              style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                        
                        <HBox fx:id="roomCardsContainer" spacing="15" alignment="TOP_LEFT">
                            <!-- Room task cards will be added dynamically -->
                        </HBox>
                    </VBox>

                </VBox>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
